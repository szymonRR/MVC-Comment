@using Comments.Models
@model Comments.Models.Comment


@{
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    Layout = null;
    IEnumerable<Comment> co = ViewData["com"] as IEnumerable<Comment>;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Artykół</title>
</head>
<body>
    <form asp-action="Article" method="post">
        <div>
            <label asp-for="Nick">Nick:</label>
            <input asp-for="Nick" />
        </div>
        <div>
            <label asp-for="Text">Tekst:</label>
            <input asp-for="Text" />
        </div>
        <input hidden   type="number"  asp-for="ArticleId" value=@ViewBag.articleid />
        <input hidden type="number" asp-for="ComentId" value=@ViewBag.comID/>

        <button type="submit">Dodaj</button>


    </form>
    <h1>Komentarze:</h1>
    <table>
        <thead>
            <tr><td>Nick</td><td>Komentarz</td><td>Data</td></tr>
        </thead>
        <tbody>
            @foreach (var c in co)
            {
                <tr>
                    <td>@c.Nick</td>
                    <td>@c.Text</td>
                    <td>@c.Date</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>